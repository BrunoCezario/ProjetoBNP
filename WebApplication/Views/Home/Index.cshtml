@model WebApplication.Models.MovimentoManualModel

@{
	ViewBag.Title = "Movimentos Manuais";
}

@using (Html.BeginForm("Cadastrar", "HomeController", FormMethod.Post))
{
	<h3>Movimentos Manuais</h3>
	<div class="widget">
		<div class="widget-head">
			<div class="widget-body">
				<div class="row-fluid">
					<div>
						<label>Mês:</label>
						@Html.TextBoxFor(m => m.Mes, new { @maxlength = "2", @placeholder = "mm", @name = "Mes", @disabled = "disabled", @id = "mes", @type = "currency" })
						<label>&nbsp;</label>
						<label>Ano:</label>
						@Html.TextBoxFor(m => m.Ano, new { @maxlength = "4", @placeholder = "AAAA", @name = "Ano", @disabled = "disabled", @id = "ano" })
					</div>
				</div>
				<br />
				<div class="row-fluid">
					<div>
						<label>Produto:</label>
						<input type="text" id="produto" name="Produto" />
						@*@Html.DropDownListFor(model => model.CodProduto)*@
						<label>&nbsp;</label>
						<label>Cosif:</label>
						@*@Html.DropDownListFor(model => model.Produto)*@
						<input type="text" id="cosif" name="Cosif" />
					</div>
				</div>
				<br />
				<div class="row-fluid">
					<div>
						<label>Valor:</label>
						@Html.TextBoxFor(m => m.Valor, new { @name = "Valor", @disabled = "disabled", @id = "valor"})
					</div>
					<br />
					<div>
						<label>Descrição:</label>
						@Html.TextBoxFor(m => m.Descricao, new { @name = "Valor", @maxlength = "50", @disabled = "disabled", @id = "descricao" })
					</div>
				</div>
				<br />
				<div class="row-fluid">
					<button type="button" id="limpar" class="btn btn-primary btn-large " style="background-color:cornflowerblue">Limpar</button>
					<button type="button" id="novo" class="btn btn-primary btn-large " style="background-color:cornflowerblue">Novo</button>
					<button type="submit" class="btn btn-primary btn-large " style="background-color:cornflowerblue">Incluir</button>
				</div>
			</div>

		</div>
	</div>
}

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery-3.4.1.intellisense.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.slim.js"></script>


<script type="text/javascript">

	$(document).ready(function () {
			$('#limpar').click(function () {
			$('#mes').val("")
			$('#ano').val("")
			$('#valor').val("")
			$('#descricao').val("")
		})

		$('#novo').click(function () {
			$('#mes').attr("disabled", false);
			$('#ano').attr("disabled", false);
			$('#valor').attr("disabled", false);
			$('#descricao').attr("disabled", false);
		})
	});

</script>

